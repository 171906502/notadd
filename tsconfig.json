{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom",
      "es2015",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@notadd/*": [
        "libs/*"
      ],
      "@notadd/nest": [
        "xplat/nest/index.ts"
      ],
      "@notadd/nest/*": [
        "xplat/nest/*"
      ],
      "@notadd/web": [
        "xplat/web/index.ts"
      ],
      "@notadd/web/*": [
        "xplat/web/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}